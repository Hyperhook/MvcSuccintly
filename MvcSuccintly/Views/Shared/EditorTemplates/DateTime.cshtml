@model DateTime?

@Html.TextBox("", (Model.HasValue ? Model.Value.ToShortDateString() : string.Empty),
new { @class = "datePicker" , @readonly = "readonly"})

<script>
    $(".datePicker").datepicker({
        showOn: "button",
        gotoCurrent: true,
        showAnim: "fold",
        buttonImage: "/Content/calendar.png",
        buttonImageOnly: true
    })
</script>